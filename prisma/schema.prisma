// Prisma schema for Taylor's Model Management

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 모델 카테고리 Enum
enum Category {
  ALL
  INTOWN
  UPCOMING
}

// 모델 테이블
model Model {
  id           String    @id @default(uuid())
  name         String
  slug         String    @unique
  category     Category
  nationality  String?
  profileImage String?
  images       Json?
  bio          String?   @db.Text
  height       String?
  measurements String?
  instagram    String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  archives     Archive[]

  @@index([category])
  @@index([slug])
}

// 아카이브 테이블
model Archive {
  id        String   @id @default(uuid())
  title     String
  brand     String?
  images    Json
  modelId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  model     Model    @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@index([modelId])
}

// 관리자 테이블
model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

// 모델 지원 테이블
model Application {
  id          String   @id @default(uuid())
  name        String
  email       String
  phone       String
  age         Int
  height      String
  weight      String
  instagram   String?
  portfolio   Json?    // 포트폴리오 이미지 URLs
  message     String?  @db.Text
  status      String   @default("PENDING") // PENDING, REVIEWED, ACCEPTED, REJECTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

// 캐스팅 요청 테이블
model Casting {
  id          String   @id @default(uuid())
  company     String
  contactName String
  email       String
  phone       String
  projectType String   // COMMERCIAL, EDITORIAL, RUNWAY, etc.
  description String   @db.Text
  budget      String?
  shootDate   DateTime?
  status      String   @default("PENDING") // PENDING, CONTACTED, IN_PROGRESS, COMPLETED, CANCELLED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}
